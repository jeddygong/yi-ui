{
  // This tsconfig is for development. Allowing *.story.vue, and __test__/*.vue to have types support
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["package/vue/src/*"],
      "@yi-ui/*": ["packages/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "declaration": false,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "packages/*",
    "packages/.vitepress/components/*.vue",
    "packages/.vitepress/*.ts",
    "meta",
    "vitest.config.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs",
    "dist"
  ]
}
