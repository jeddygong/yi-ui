{
  // tsconfig for type-check only
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"],
      "@yi-ui/*": ["../../packages/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "**/*.test.ts",
    "**/*.test.js",
    "src/**/*.story.vue",
    "src/**/story/*"
  ]
}
