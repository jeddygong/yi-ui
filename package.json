{
  "name": "yi-ui",
  "type": "module",
  "version": "1.0.5",
  "private": true,
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "gen": "bash ./scripts/gen.sh",
    "prepare": "npx simple-git-hooks",
    "dev": "pnpm run build --watch",
    "play:vue": "pnpm -C playground/vue3 dev",
    "play:nuxt": "pnpm -C playground/nuxt dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "clear": "rimraf packages/**/dist",
    "build": "pnpm run clear && pnpm -r --filter=./packages/** run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "changeset": "changeset && changeset version",
    "release": "pnpm build && pnpm release:only",
    "release:only": "changeset publish"
  },
  "peerDependencies": {
    "vue": "^3.4.21"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.0.6",
    "@vueuse/core": "^10.9.0",
    "@vueuse/shared": "^10.9.0",
    "@yi-ui/shared": "workspace:*",
    "@yi-ui/vue": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.9.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.0.3",
    "@tsconfig/node18": "^18.2.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.30",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-istanbul": "^1.5.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.0",
    "typescript": "^5.4.3",
    "vite": "^5.2.8",
    "vite-plugin-dts": "^3.7.3",
    "vitepress": "^1.0.1",
    "vitest": "^1.4.0",
    "vitest-axe": "^0.1.0",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.4.21",
    "vue-tsc": "^2.0.10"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,json}": [
      "pnpm run lint",
      "pnpm run lint:fix"
    ]
  }
}
